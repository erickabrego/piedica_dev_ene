<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="blog_post_title_h1" name="Post h1 Title" inherit_id="website_blog.blog_post_complete">
        <xpath expr="//div[@id='title']//div[@id='o_wblog_post_name']" position="replace">
            <h1 t-field="blog_post.name" id="o_wblog_post_name" class="o_editable_no_shadow" data-oe-expression="blog_post.name" t-att-data-blog-id="blog_post.id" placeholder="Blog Post Title"/>
        </xpath>
    </template>

    <template id="blog_post_regularcover_title_h1" name="Post h1 Regularcover Title" inherit_id="website_blog.opt_blog_post_regular_cover">
        <xpath expr="//div[@id='title']//div[@id='o_wblog_post_name']" position="replace">
            <h1 t-field="blog_post.name" id="o_wblog_post_name" data-oe-expression="blog_post.name" t-att-data-blog-id="blog_post.id" placeholder="Title"/>
        </xpath>
    </template>
</odoo>
